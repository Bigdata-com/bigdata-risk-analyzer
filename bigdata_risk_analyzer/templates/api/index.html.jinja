{% extends "/api/base.html.jinja" %}
{% block content %}

<div id="infoModalsContainer"></div>

<!-- Header with Config Button -->
<header class="flex items-center justify-between mb-8 pb-4 border-b border-zinc-700">
  <div class="flex items-center gap-4">
    <svg class="w-10 h-10 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-1.964-1.333-2.732 0L3.082 16c-.77 1.333.192 3 1.732 3z"></path>
    </svg>
    <div>
      <h1 class="text-3xl font-bold text-white">Risk Analyzer</h1>
      <p class="text-zinc-400 text-sm">AI-powered risk analysis for investment research</p>
    </div>
  </div>
  <div class="flex items-center gap-3">
    <button onclick="toggleConfigPanel()" 
      class="flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors shadow-lg">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      Configuration
    </button>
    <button id="showJsonBtn" style="display:none;"
      class="px-6 py-2 bg-zinc-700 hover:bg-zinc-600 text-white rounded-lg font-medium transition-colors shadow-lg">
      JSON
    </button>
    <button id="newAnalysisBtn" onclick="resetToStart()" style="display:none;"
      class="flex items-center justify-center p-2 bg-zinc-700 hover:bg-zinc-600 text-white rounded-lg transition-colors shadow-lg"
      title="Start New Analysis">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
      </svg>
    </button>
  </div>
</header>

<!-- Empty State (shown when no analysis has been run) -->
<div id="emptyState" class="py-16 text-center">
  <div class="mb-8">
    <h2 class="text-3xl font-bold text-white mb-4">Ready to monitor risk exposure?</h2>
    <p class="text-zinc-300 text-lg max-w-2xl mx-auto">
      Uncover hidden vulnerabilities and measure risk exposure across your portfolio using AI-powered intelligence
    </p>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto mb-8">
    <!-- Quick Start Card 1 -->
    <div onclick="loadQuickStartTemplate('supply-chain')" 
      class="bg-gradient-to-br from-red-900/30 to-red-800/20 rounded-xl border border-red-700/40 p-8 cursor-pointer hover:shadow-xl hover:border-red-500/60 transition-all group">
      <div class="w-16 h-16 bg-red-500/20 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
        <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-white mb-2">Supply Chain Risk</h3>
      <p class="text-zinc-400 text-sm">Tariffs, trade barriers, disruptions</p>
      <p class="text-red-400 text-xs mt-3">Magnificent 7</p>
    </div>
    
    <!-- Quick Start Card 2 -->
    <div onclick="loadQuickStartTemplate('regulatory-risk')" 
      class="bg-gradient-to-br from-orange-900/30 to-orange-800/20 rounded-xl border border-orange-700/40 p-8 cursor-pointer hover:shadow-xl hover:border-orange-500/60 transition-all group">
      <div class="w-16 h-16 bg-orange-500/20 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
        <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-white mb-2">Regulatory Risk</h3>
      <p class="text-zinc-400 text-sm">Compliance, policy changes, legal</p>
      <p class="text-orange-400 text-xs mt-3">FinTech Innovators</p>
    </div>
    
    <!-- Quick Start Card 3 -->
    <div onclick="loadQuickStartTemplate('market-risk')" 
      class="bg-gradient-to-br from-yellow-900/30 to-yellow-800/20 rounded-xl border border-yellow-700/40 p-8 cursor-pointer hover:shadow-xl hover:border-yellow-500/60 transition-all group">
      <div class="w-16 h-16 bg-yellow-500/20 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
        <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-white mb-2">Market Volatility</h3>
      <p class="text-zinc-400 text-sm">Price volatility, liquidity, correlations</p>
      <p class="text-yellow-400 text-xs mt-3">Defense Stocks</p>
    </div>
  </div>
  
  <div class="flex items-center justify-center gap-4">
    <button onclick="toggleConfigPanel()" 
      class="flex items-center gap-2 px-6 py-3 bg-zinc-700 hover:bg-zinc-600 text-white rounded-lg font-medium transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
      </svg>
      {% if demo_mode %}View Configuration{% else %}Custom Configuration{% endif %}
    </button>
  </div>
</div>

<!-- Dashboard Cards (shown after analysis) -->
<div id="dashboardSection" class="hidden">
  <div id="dashboardCards"></div>
  
  <!-- Explore Results Section (Collapsible) -->
  <div class="mt-8">
    <button onclick="toggleExploreSection()" 
      class="w-full flex items-center justify-between px-6 py-4 bg-zinc-800/50 hover:bg-zinc-800 rounded-lg border border-zinc-700 transition-colors group">
      <div class="flex items-center gap-3">
        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <h2 class="text-2xl font-bold text-white">Explore Detailed Results</h2>
      </div>
      <svg id="exploreIcon" class="w-6 h-6 text-zinc-400 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    
    <div id="exploreContent" class="hidden mt-4">
      <div id="resultsContainer">
        <!-- Tab Navigation -->
        <div class="bg-zinc-800/50 border-b border-zinc-700 rounded-t-lg sticky top-0 z-30">
          <div class="flex gap-1 p-2">
            <button data-tab="summary" 
              class="flex items-center gap-2 px-4 py-3 rounded-lg font-medium text-sm transition-all duration-200 border-b-2 border-red-500 text-red-400 bg-red-500/10">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-3zM14 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1h-4a1 1 0 01-1-1v-3z"></path>
              </svg>
              Risk Heatmap
            </button>
            <button data-tab="companies" 
              class="flex items-center gap-2 px-4 py-3 rounded-lg font-medium text-sm transition-all duration-200 border-b-2 border-transparent text-zinc-400 hover:text-zinc-200">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              Companies
            </button>
            <button data-tab="mindmap" 
              class="flex items-center gap-2 px-4 py-3 rounded-lg font-medium text-sm transition-all duration-200 border-b-2 border-transparent text-zinc-400 hover:text-zinc-200">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
              </svg>
              Taxonomy
            </button>
            <button data-tab="evidence" 
              class="flex items-center gap-2 px-4 py-3 rounded-lg font-medium text-sm transition-all duration-200 border-b-2 border-transparent text-zinc-400 hover:text-zinc-200">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Evidence
            </button>
          </div>
        </div>

        <!-- Tab Contents -->
        <div class="bg-zinc-800/30 rounded-b-lg border border-zinc-700 border-t-0">
          <!-- Summary Tab -->
          <div data-tab-content="summary" class="p-6">
            <div class="loading-indicator hidden">
              <div class="flex items-center justify-center py-20">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-red-500"></div>
                <span class="ml-3 text-zinc-400">Loading heatmap...</span>
              </div>
            </div>
            <div class="tab-actual-content"></div>
          </div>

          <!-- Companies Tab -->
          <div data-tab-content="companies" class="hidden p-6">
            <div class="loading-indicator hidden">
              <div class="flex items-center justify-center py-20">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-red-500"></div>
                <span class="ml-3 text-zinc-400">Loading companies...</span>
              </div>
            </div>
            <div class="tab-actual-content"></div>
          </div>

          <!-- Risk Taxonomy Tab -->
          <div data-tab-content="mindmap" class="hidden p-6">
            <div class="loading-indicator hidden">
              <div class="flex items-center justify-center py-20">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-red-500"></div>
                <span class="ml-3 text-zinc-400">Loading taxonomy...</span>
              </div>
            </div>
            <div class="tab-actual-content"></div>
          </div>

          <!-- Evidence Tab -->
          <div data-tab-content="evidence" class="hidden p-6">
            <div class="loading-indicator hidden">
              <div class="flex items-center justify-center py-20">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-red-500"></div>
                <span class="ml-3 text-zinc-400">Loading evidence...</span>
              </div>
            </div>
            <div class="tab-actual-content"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Configuration Panel (Slides in from right) -->
<div id="configBackdrop" class="hidden fixed inset-0 bg-black/70 backdrop-blur-sm z-40 transition-opacity duration-300"></div>
<div id="configPanel" class="fixed top-0 right-0 h-full w-full max-w-md bg-gradient-to-br from-zinc-800 to-zinc-900 shadow-2xl z-50 transform translate-x-full transition-transform duration-300 overflow-y-auto">
  <div class="p-6">
    <!-- Panel Header -->
    <div class="flex items-center justify-between mb-6 pb-4 border-b border-zinc-700">
      <h2 class="text-2xl font-bold text-white">Configuration</h2>
      <button onclick="closeConfigPanel()" class="text-zinc-400 hover:text-white transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- Quick Start Templates -->
    <div class="mb-8">
      <h3 class="text-sm font-semibold text-zinc-400 mb-1 uppercase tracking-wide">Pre-computed Demos</h3>
      <p class="text-xs text-zinc-500 mb-3">Explore example risk analyses with pre-loaded results</p>
      <div class="space-y-2">
        <button onclick="loadQuickStartTemplate('supply-chain')" 
          class="w-full text-left px-4 py-3 bg-red-600/20 hover:bg-red-600/30 border border-red-600/30 rounded-lg transition-colors">
          <div class="font-medium text-white">Supply Chain Risk</div>
          <div class="text-xs text-zinc-400">Magnificent 7</div>
        </button>
        <button onclick="loadQuickStartTemplate('regulatory-risk')" 
          class="w-full text-left px-4 py-3 bg-orange-600/20 hover:bg-orange-600/30 border border-orange-600/30 rounded-lg transition-colors">
          <div class="font-medium text-white">Regulatory Risk</div>
          <div class="text-xs text-zinc-400">FinTech Innovators</div>
        </button>
        <button onclick="loadQuickStartTemplate('market-risk')" 
          class="w-full text-left px-4 py-3 bg-yellow-600/20 hover:bg-yellow-600/30 border border-yellow-600/30 rounded-lg transition-colors">
          <div class="font-medium text-white">Market Volatility</div>
          <div class="text-xs text-zinc-400">Defense Stocks</div>
        </button>
      </div>
    </div>
    
    <!-- Custom Configuration Form -->
    <form id="riskForm" autocomplete="off">
      <h3 class="text-sm font-semibold text-zinc-400 mb-4 uppercase tracking-wide">Custom Configuration</h3>
      
      <!-- Theme -->
      <div class="mb-4">
        <label for="main_theme" class="block mb-2 font-medium text-sm text-white">
          <span>Risk Scenario</span>
          <button type="button" class="text-red-400 text-xs ml-1" onclick="showInfoModal('main_theme')" title="Info">ⓘ</button>
        </label>
        <input type="text" id="main_theme"
          class="bg-zinc-900 border border-zinc-600 text-white text-sm rounded-lg block w-full p-3 focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
          placeholder="{{ main_theme }}" required value="{{ main_theme }}" />
      </div>

      <!-- Focus -->
      <div class="mb-4">
        <label for="focus" class="block mb-2 font-medium text-sm text-white">
          <span>Focus</span>
          <button type="button" class="text-red-400 text-xs ml-1" onclick="showInfoModal('focus')" title="Info">ⓘ</button>
        </label>
        <textarea id="focus"
          class="bg-zinc-900 border border-zinc-600 text-white text-sm rounded-lg block w-full p-3 focus:ring-2 focus:ring-blue-500 focus:border-red-500 min-h-[100px] resize-none"
          placeholder="{{ focus }}" required>{{ focus }}</textarea>
      </div>

      <!-- Company Universe -->
      <div class="mb-4">
        <label for="companies" class="block mb-2 font-medium text-sm text-white">
          <span>Company Universe</span>
          <button type="button" class="text-red-400 text-xs ml-1" onclick="showInfoModal('companies')" title="Info">ⓘ</button>
        </label>
        <div class="relative">
          <input id="companies_text" type="text"
            class="absolute w-[calc(100%-20px)] bg-zinc-900 text-white text-sm rounded-lg block p-3 h-[46px] focus:ring-2 focus:ring-blue-500 focus:border-red-500" />
          <select id="companies"
            class="bg-zinc-900 border border-zinc-600 text-white text-sm rounded-lg block w-full p-3 h-[46px] z-10 focus:ring-2 focus:ring-blue-500 focus:border-red-500 cursor-pointer"
            onchange="this.previousElementSibling.value=this.options[this.selectedIndex].text;">
          </select>
        </div>
      </div>

      <!-- Advanced Options Toggle -->
      <button type="button" onclick="toggleAdvancedOptions()" id="advancedOptionsBtn"
        class="w-full flex items-center justify-between px-4 py-3 bg-zinc-700 hover:bg-zinc-600 rounded-lg transition-colors mb-4">
        <span class="text-white font-medium text-sm">Advanced Options</span>
        <svg id="advancedOptionsIcon" class="w-4 h-4 text-white transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>

      <!-- Advanced Options -->
      <div id="advanced-options" class="hidden space-y-4 mb-6">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label for="start_date" class="block mb-2 font-medium text-xs text-zinc-400">Start Date</label>
            <input type="date" id="start_date"
              class="bg-zinc-900 border border-zinc-600 text-white text-sm rounded-lg block w-full p-2 focus:ring-2 focus:ring-orange-500"
              value="{{ start_date }}" />
          </div>
          <div>
            <label for="end_date" class="block mb-2 font-medium text-xs text-zinc-400">End Date</label>
            <input type="date" id="end_date"
              class="bg-zinc-900 border border-zinc-600 text-white text-sm rounded-lg block w-full p-2 focus:ring-2 focus:ring-orange-500"
              value="{{ end_date }}" />
          </div>
        </div>
        
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label for="frequency" class="block mb-2 font-medium text-xs text-zinc-400">Frequency</label>
            <select id="frequency"
              class="bg-zinc-900 border border-zinc-600 text-white text-sm rounded-lg block w-full p-2 focus:ring-2 focus:ring-blue-500 cursor-pointer">
              <option value="D" {% if frequency=='D' %}selected{% endif %}>Daily</option>
              <option value="W" {% if frequency=='W' %}selected{% endif %}>Weekly</option>
              <option value="M" {% if frequency=='M' %}selected{% endif %}>Monthly</option>
              <option value="3M" {% if frequency=='3M' %}selected{% endif %}>Quarterly</option>
              <option value="Y" {% if frequency=='Y' %}selected{% endif %}>Yearly</option>
            </select>
          </div>
          <div>
            <label for="rerank_threshold" class="block mb-2 font-medium text-xs text-zinc-400">Rerank (0-1)</label>
            <input type="number" id="rerank_threshold"
              class="bg-zinc-900 border border-zinc-600 text-white text-sm rounded-lg block w-full p-2 focus:ring-2 focus:ring-orange-500"
              value="{{ rerank_threshold if rerank_threshold is defined and rerank_threshold is not none else '' }}"
              max="1" min="0" step="0.01">
          </div>
        </div>
        
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label for="document_limit" class="block mb-2 font-medium text-xs text-zinc-400">Doc Limit</label>
            <input type="number" id="document_limit"
              class="bg-zinc-900 border border-zinc-600 text-white text-sm rounded-lg block w-full p-2 focus:ring-2 focus:ring-orange-500"
              value="{{ document_limit }}" />
          </div>
          <div>
            <label for="batch_size" class="block mb-2 font-medium text-xs text-zinc-400">Batch Size</label>
            <input type="number" id="batch_size"
              class="bg-zinc-900 border border-zinc-600 text-white text-sm rounded-lg block w-full p-2 focus:ring-2 focus:ring-orange-500"
              value="{{ batch_size }}" />
          </div>
        </div>
        
        <!-- Hidden fields -->
        <input type="text" id="fiscal_year" class="hidden"
          value="{% if fiscal_year %}{% if fiscal_year is iterable and fiscal_year is not string %}{{ fiscal_year|join(', ') }}{% else %}{{ fiscal_year }}{% endif %}{% endif %}" />
        <input type="text" id="llm_model" class="hidden" value="{{ llm_model }}" />
        <select id="document_type" class="hidden">
          <option value="all" {% if document_type=='all' %}selected{% endif %}>ALL</option>
          <option value="filings" {% if document_type=='filings' %}selected{% endif %}>FILINGS</option>
          <option value="transcripts" {% if document_type=='transcripts' %}selected{% endif %}>TRANSCRIPTS</option>
          <option value="news" {% if document_type=='news' %}selected{% endif %}>NEWS</option>
          <option value="files" {% if document_type=='files' %}selected{% endif %}>FILES</option>
        </select>
      </div>

      <!-- Action Buttons -->
      <div class="space-y-3 pt-4 border-t border-zinc-700">
        {% if demo_mode %}
        <button type="button" disabled
          class="w-full flex items-center justify-center gap-2 text-zinc-500 bg-zinc-700 cursor-not-allowed font-bold rounded-lg text-base px-6 py-4 opacity-50">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          Run Analysis (Disabled)
        </button>
        <p class="text-xs text-amber-400 text-center leading-relaxed">
