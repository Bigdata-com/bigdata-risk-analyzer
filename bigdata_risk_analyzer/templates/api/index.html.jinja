<script>
  const watchlists = {{ example_watchlists | tojson }};

  // Populate the dropdown with watchlists
  const comp_select = document.getElementById('companies');
  const comp_text = document.getElementById('companies_text');
  watchlists.forEach((watchlist, index) => {
    if (watchlist.id === "{{ companies }}") {
      comp_text.value = watchlist.name;
    }
    const option = document.createElement('option');
    option.value = watchlist.id;
    option.textContent = watchlist.name;
    comp_select.appendChild(option);
  });
  
  // Make watchlists globally available
  window.watchlists = watchlists;

  document.getElementById('showJsonBtn').onclick = function () {
    if (lastReport) {
      document.getElementById('jsonContent').textContent = JSON.stringify(lastReport, null, 2);
      document.getElementById('jsonModal').style.display = 'block';
    }
  };

  window.closeModal = closeModal;
  window.toggleMotivation = toggleMotivation;
  
  // Toggle explore section
  function toggleExploreSection() {
    const content = document.getElementById('exploreContent');
    const icon = document.getElementById('exploreIcon');
    
    if (content.classList.contains('hidden')) {
      content.classList.remove('hidden');
      icon.style.transform = 'rotate(180deg)';
    } else {
      content.classList.add('hidden');
      icon.style.transform = 'rotate(0deg)';
    }
  }
  window.toggleExploreSection = toggleExploreSection;
  
  // Reset to start - clear results and show empty state
  function resetToStart() {
    // Hide dashboard and show empty state
    const emptyState = document.getElementById('emptyState');
    const dashboardSection = document.getElementById('dashboardSection');
    
    if (emptyState) emptyState.style.display = 'block';
    if (dashboardSection) dashboardSection.classList.add('hidden');
    
    // Hide buttons
    const showJsonBtn = document.getElementById('showJsonBtn');
    const newAnalysisBtn = document.getElementById('newAnalysisBtn');
    if (showJsonBtn) showJsonBtn.style.display = 'none';
    if (newAnalysisBtn) newAnalysisBtn.style.display = 'none';
    
    // Clear last report
    window.lastReport = null;
    
    // Reset tabs
    if (window.tabController) {
      window.tabController.reset();
    }
    
    // Scroll to top
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
  window.resetToStart = resetToStart;

  // Initialize tab controller when DOM is ready
  document.addEventListener('DOMContentLoaded', function() {
    if (window.tabController) {
      window.tabController.init();
    }
  });
</script>
